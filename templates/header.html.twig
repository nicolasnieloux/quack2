<header class=" bg-blue-500 p-4">
    <div>
    <div class="flex text-left ">
        <img src="{{ asset('picture/canard_profile.png') }}" alt="Duck Logo" class="w-8 h-8 mr-2">
        {% if app.user %}
            <h1 class="text-white text-2xl font-bold">Loggué en tant que {{ app.user.userIdentifier }}</h1>
        {% endif %}
    </div>

    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
    <div class="flex justify-center">
        <a class="inline-block px-3 text-white bg-blue-500 hover:bg-blue-600 rounded-full text-2xl justify-center"
           href="{{ path('app_quack_new') }}">Créer un Quack</a>
    </div>
    <div class="flex justify-end">
    <a class="inline-block px-3 text-white bg-red-500 hover:bg-red-600 rounded-full" href="{{ path('app_logout') }}">Logout</a>
    </div>
    {% else %}
    <div class="py-4 flex justify-between items-center">
        <a href="{{ path('app_register') }}"
           class="px-3 py-2 rounded-full bg-blue-500 text-white text-sm font-bold hover:bg-blue-600">Créer un compte</a>
        <a href="{{ path('app_login') }}"
           class="px-3 py-2 rounded-full bg-blue-500 text-white text-sm font-bold hover:bg-blue-600">Se connecter</a>
        {% endif %}
    </div>
    </div>
</header>


